{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "ESNext",
        "removeComments": false,
        "sourceMap": false,
        "declaration": false,
        //"target": "ESNext",
        "plugins": [
            {
                "transform": "./transformers/index.ts",
                //"type": "config",
                //"type": "raw",
                "renamedPackages": [
                    ["@arkadium/game-core", "@arkadium/game-core-engine"],
                    ["@arkadium/game-core-plugins", "@arkadium/game-core-plugin-ui"],
                ],
                "renamedSymbols": {
                    "@arkadium/game-core-engine": {
                        "Container": "IOCContainer"
                    }
                }
            }
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
}
